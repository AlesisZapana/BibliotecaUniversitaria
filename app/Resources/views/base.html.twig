<!DOCTYPE html>
<html>
    <head>
      <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="UTF-8" />
        <title>{% block title %}Biblioteca Universitaria{% endblock %}</title>
        {% block stylesheets %}
            
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block head_css %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
            {# <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous"> #}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
            <link href="https://cdn.rawgit.com/AlesisZapana/Admin/master/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
            <link href="https://cdn.rawgit.com/AlesisZapana/Admin/master/css/sb-admin.css" rel="stylesheet">
        {% endblock %}
        {% block after_css %}{% endblock %}
        <style type="text/css">
          body{
              margin-top: 60px;
          }
          #page-top.fixed-nav.sticky-footer.logeado.sidenav-toggled{ 
            padding-left: 55px
          }
          #page-top.fixed-nav.sticky-footer.logeado{ 
              padding-left: 250px
          }
        </style>

    </head>
    <body class="fixed-nav sticky-footer" id="page-top">
        
  {#<img src="http://www.untdf.edu.ar/img/isologotipo.png"> #}
        {% block barra %}
            
        
          <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
              <a class="navbar-brand" href="/">{% trans %} Biblioteca {% endtrans %}</a>
              <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
              
              <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Menú Libros">
                  <a class="nav-link" href="{{path('libro_index')}} ">
                    <i class="fas fa-book-open"></i>
                    <span class="nav-link-text">{% trans %} Libros {% endtrans %}</span>
                  </a>
                </li>
                {% if app.user %}
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Menú Categorias">
                  <a class="nav-link" href="{{path('categoria_index')}}">
                    <i class="fas fa-list-ul"></i>
                    <span class="nav-link-text">{% trans %} Categorias{% endtrans %}</span>
                  </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Menú Idiomas">
                  <a class="nav-link" href="{{path('idioma_index')}}">
                    <i class="fas fa-language"></i>
                    <span class="nav-link-text">{% trans %} Idiomas{% endtrans %}</span>
                  </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Menú Autores">
                  <a class="nav-link" href="{{path('autor_index')}}">
                    <i class="fas fa-pencil-alt"></i>
                    <span class="nav-link-text">{% trans %} Autores{% endtrans %}</span>
                  </a>
                </li>
                {% endif %}
              </ul>
              {# <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                  <a class="nav-link text-center" id="sidenavToggler">
                    <i class="fa fa-fw fa-angle-left"></i>
                  </a>
                </li>
              </ul> #}
              
              <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                  
                </li>
                <li class="nav-item dropdown">

                </li>
                {% if app.user %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('fos_user_change_password')}}">{% trans %}Cambiar Contraseña {% endtrans %}<i class="fas fa-key"></i></a> 
                  </li>
                {% endif %}

                {% if app.user %}
                <li class="nav-item">
                  <a class="nav-link" href="{{path('fos_user_security_logout')}}">Logout <i class="fas fa-sign-out-alt"></i></a>
                </li>
                {% else %}
                <li class="nav-item">
                  <a class="nav-link" href="{{path('fos_user_security_login')}}"><i class="fas fa-sign-in-alt"></i> Login</a>
                </li>                
                {% endif %}
              </ul>
            </div>
          </nav>            

        {% endblock %}

        {% block content %}{% endblock %}


        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{label}} alert alert-{{label}}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}        

        {% block body %}{% endblock %}

            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

            <script src="https://cdn.rawgit.com/AlesisZapana/Admin/master/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.rawgit.com/AlesisZapana/Admin/master/vendor/jquery-easing/jquery.easing.min.js"></script>
            <!--<script src="https://cdn.rawgit.com/AlesisZapana/Admin/master/js/sb-admin.js"></script>-->
            <script src="https://cdn.rawgit.com/AlesisZapana/startbootstrap-sb-admin/AlesisZapana-patch-10/js/sb-admin.js"></script>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
            {% if app.user %}
            <script type="text/javascript">
                console.log("estoy logeado");
                
                $('#page-top').addClass('logeado');
                $("body").addClass("sidenav-toggled");

            </script>
            {% endif %}
        {% block javascripts %}          
        {% endblock %}
      
    </body>
</html>
