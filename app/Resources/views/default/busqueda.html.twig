{% extends 'default/index.html.twig' %}


{% block cards %}
	<style type="text/css">
		.card-img-top {
	    width: 100%;
	    height: 15vw;
	    object-fit: cover;
	}
	</style>
	<br><br><br>
{# 	<h1>solo del query</h1>
	{{libros}}
	data|json_decode <-- este funciona, pero no lo voy a usar
	<h1>jsondecodeado</h1>
	{{librosJson}} #}
	<div class="container">
	<div class="justify-content-md-center card-deck">
		<div class="container">
		<div class="row justify-content-center">
		{% for libro in libros %}	
			<div class="card card-cascade border-secondary col-lg-3 col-md-6 col-sm-12" style="min-width: 17rem; max-width: 17rem;">
			<img class="card-img-top" src="{{libro.portada}}" alt="{{libro.titulo}}">
			<div class="card-body">
				<h5 class="card-title">{{libro.titulo}}</h5>
				{# <p class="card-text" style="max-height: 10rem;">{{libro.resumen}} </p> #}
				{% block imagen %}
				{% endblock %}
				<ul class="list-group list-group-flush">
					<li class="list-group-item">{% trans %}Idioma{% endtrans %}: {{libro.idioma.nombre}}</li>
					<li class="list-group-item">{% trans %}Cant. Páginas{% endtrans %}: {{libro.cantpaginas}}</li>
				</ul>
				<div class="card-footer">
					<small><a href="{{path('libro_show',{'id': libro.id })}} " class="btn btn-primary">{% trans %}Más Info{% endtrans %}</a></small>
				</div>
			</div>
			</div>	
		{% endfor %}
		</div>
		</div>
	</div>
	</div>
{% endblock %}